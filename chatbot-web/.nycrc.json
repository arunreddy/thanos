{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "lcov"],
  "report-dir": "coverage",
  "include": [
    "src/lib/utils.ts",
    "src/lib/coverage-utils.ts",
    "src/lib/api.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/helpers/**/*.ts",
    "node_modules",
    "next.config.ts"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}